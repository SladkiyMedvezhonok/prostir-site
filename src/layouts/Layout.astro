---
// Layout component, просто обгортка для сторінок
const { children } = Astro.props;
---

<html lang="uk">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Простір</title>
  </head>
  <body style="font-family: sans-serif; margin: 0; padding: 0;">
    <header style="background: #f2f2f2; padding: 20px;">
      <h1 style="margin: 0;">Психологічний простір</h1>
    </header>
    <main style="padding: 40px;">
      {children}
    </main>
    <footer style="background: #eee; padding: 20px; text-align: center;">
      <p>© {new Date().getFullYear()} Простір</p>
    </footer>
  </body>
</html>
